<h2>Lista de postagens</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova Postagem</button></a>

{{#each postagens}}
<div class="card mt-4">
  <div class="card-body ">
    <h4>{{titulo}}</h4>
    <p>Descri√ßao: {{descricao}}</p>
    <small>Data: {{data}}</small>
    <small>Categoria: {{categoria.nome}}</small><br>
    <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-3">Editar Post</button></a>
    <!--<a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger mt-3">Deletar Post</button></a> -->
    <form action="/admin/postagens/deletar" method="POST">
      <input type="hidden" name="id" value="{{_id}}">
      <button class="btn btn-danger" type="submit">Deletar Post</button>
    </form>
  </div>
</div>
{{else}}
<p>Nenhuma postagem registrada!</p>
{{/each}}